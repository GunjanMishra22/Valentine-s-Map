<script>
const S={type:'map',shape:'circle',data:{title:'NEW YORK',subtitle:'40.7128¬∞N, 74.0060¬∞W',date:'June 15, 2024',name1:'Sarah',name2:'Michael',quote:'Home is wherever I\'m with you',font:'Inter',textColor:'#111111',palette:{bg:'#FFFFFF',text:'#111111',accent:'#888888'}}};
const palettes=[{name:'Classic',c:['#FFFFFF','#111111','#888888']},{name:'Mocha',c:['#F5EFE7','#3E2723','#A67B5B']},{name:'Navy',c:['#1A1F2E','#FFFFFF','#6495ED']},{name:'Blush',c:['#F9D5DC','#4A1C2F','#D4A5A5']},{name:'Sage',c:['#F5F5F0','#2C3E2C','#8BA888']},{name:'Sunset',c:['#FFF4E6','#D35400','#E67E22']},{name:'Ocean',c:['#EBF5FB','#154360','#3498DB']},{name:'Cherry',c:['#FFE5E5','#7C2855','#C41E3A']},{name:'Lavender',c:['#F5F0FF','#4A1C40','#9B89B3']},{name:'Honey',c:['#FFF8E1','#5D4E37','#C9A878']}];
const fonts=[{name:'Inter',family:'Inter'},{name:'Playfair',family:'Playfair Display'},{name:'Montserrat',family:'Montserrat'},{name:'Lora',family:'Lora'},{name:'Poppins',family:'Poppins'}];
function renderPalettes(){const c=document.getElementById('palettes');palettes.forEach((p,i)=>{const d=document.createElement('div');d.className='palette-card'+(i===0?' active':'');d.innerHTML=`<div class="palette-colors">${p.c.map(x=>`<div class="palette-color" style="background:${x}"></div>`).join('')}</div><div class="palette-name">${p.name}</div>`;d.onclick=()=>{document.querySelectorAll('.palette-card').forEach(x=>x.classList.remove('active'));d.classList.add('active');S.data.palette={bg:p.c[0],text:p.c[1],accent:p.c[2]};draw()};c.appendChild(d)})}
function renderFonts(){const c=document.getElementById('fonts');fonts.forEach((f,i)=>{const d=document.createElement('div');d.className='font-card'+(i===0?' active':'');d.innerHTML=`<div class="font-preview" style="font-family:'${f.family}'">Aa</div><div class="font-name">${f.name}</div>`;d.onclick=()=>{document.querySelectorAll('.font-card').forEach(x=>x.classList.remove('active'));d.classList.add('active');S.data.font=f.family;draw()};c.appendChild(d)})}
function renderContentInputs(){const c=document.getElementById('content-inputs');if(S.type==='map'){c.innerHTML=`<div class="section"><label class="section-label">Location</label><input type="text" id="location" placeholder="City, Country" value="New York, USA"></div><div class="section"><label class="section-label">Title</label><input type="text" id="title" value="${S.data.title}"></div><div class="section"><label class="section-label">Subtitle</label><input type="text" id="subtitle" value="${S.data.subtitle}"></div>`;document.getElementById('title').oninput=e=>{S.data.title=e.target.value;draw()};document.getElementById('subtitle').oninput=e=>{S.data.subtitle=e.target.value;draw()}}else if(S.type==='love'){c.innerHTML=`<div class="section"><label class="section-label">First Name</label><input type="text" id="name1" value="${S.data.name1}"></div><div class="section"><label class="section-label">Second Name</label><input type="text" id="name2" value="${S.data.name2}"></div><div class="section"><label class="section-label">Date</label><input type="text" id="date" value="${S.data.date}"></div>`;document.getElementById('name1').oninput=e=>{S.data.name1=e.target.value;draw()};document.getElementById('name2').oninput=e=>{S.data.name2=e.target.value;draw()};document.getElementById('date').oninput=e=>{S.data.date=e.target.value;draw()}}else if(S.type==='constellation'){c.innerHTML=`<div class="section"><label class="section-label">Title</label><input type="text" id="title" value="UNDER THIS SKY"></div><div class="section"><label class="section-label">Date</label><input type="text" id="date" value="${S.data.date}"></div>`;document.getElementById('title').oninput=e=>{S.data.title=e.target.value;draw()};document.getElementById('date').oninput=e=>{S.data.date=e.target.value;draw()}}else if(S.type==='milestone'){c.innerHTML=`<div class="section"><label class="section-label">Title</label><input type="text" id="title" value="MILESTONE"></div><div class="section"><label class="section-label">Subtitle</label><input type="text" id="subtitle" value="Special Moment"></div><div class="section"><label class="section-label">Date</label><input type="text" id="date" value="${S.data.date}"></div>`;document.getElementById('title').oninput=e=>{S.data.title=e.target.value;draw()};document.getElementById('subtitle').oninput=e=>{S.data.subtitle=e.target.value;draw()};document.getElementById('date').oninput=e=>{S.data.date=e.target.value;draw()}}else if(S.type==='quote'){c.innerHTML=`<div class="section"><label class="section-label">Your Quote</label><textarea id="quote">${S.data.quote}</textarea></div>`;document.getElementById('quote').oninput=e=>{S.data.quote=e.target.value;draw()}}}
function draw(){const canvas=document.getElementById('posterCanvas');const ctx=canvas.getContext('2d');const dpr=window.devicePixelRatio||1;const w=500,h=700;canvas.width=w*dpr;canvas.height=h*dpr;canvas.style.width=w+'px';canvas.style.height=h+'px';ctx.scale(dpr,dpr);ctx.fillStyle=S.data.palette.bg;ctx.fillRect(0,0,w,h);ctx.fillStyle=S.data.textColor;ctx.textAlign='center';if(S.type==='map'){ctx.save();ctx.translate(w/2,h/2-50);if(S.shape==='circle'){ctx.beginPath();ctx.arc(0,0,140,0,Math.PI*2);ctx.strokeStyle=S.data.palette.text;ctx.lineWidth=2;ctx.stroke();ctx.clip()}else if(S.shape==='heart'){ctx.beginPath();const x=-70,y=-90,wd=140,ht=140;ctx.moveTo(x+wd/2,y+ht/4);ctx.bezierCurveTo(x+wd/2,y,x,y,x,y+ht/4);ctx.bezierCurveTo(x,y+ht/2,x+wd/2,y+ht*3/4,x+wd/2,y+ht);ctx.bezierCurveTo(x+wd/2,y+ht*3/4,x+wd,y+ht/2,x+wd,y+ht/4);ctx.bezierCurveTo(x+wd,y,x+wd/2,y,x+wd/2,y+ht/4);ctx.strokeStyle=S.data.palette.text;ctx.lineWidth=2;ctx.stroke();ctx.clip()}else if(S.shape==='square'){ctx.rect(-120,-120,240,240);ctx.strokeStyle=S.data.palette.text;ctx.lineWidth=2;ctx.stroke();ctx.clip()}for(let i=0;i<12;i++){const a=Math.random()*Math.PI*2;const r=Math.random()*130;ctx.beginPath();ctx.moveTo(0,0);ctx.lineTo(Math.cos(a)*r,Math.sin(a)*r);ctx.strokeStyle=S.data.palette.accent;ctx.lineWidth=1;ctx.stroke()}ctx.restore();ctx.font=`bold 48px ${S.data.font}`;ctx.fillText(S.data.title,w/2,h-200);ctx.font=`16px ${S.data.font}`;ctx.fillStyle=S.data.palette.accent;ctx.fillText(S.data.subtitle,w/2,h-160)}else if(S.type==='love'){ctx.font=`38px ${S.data.font}`;ctx.fillText(S.data.name1,w/2,h/2-80);ctx.font='48px Inter';ctx.fillStyle=S.data.palette.accent;ctx.fillText('‚ô•',w/2,h/2);ctx.fillStyle=S.data.textColor;ctx.font=`38px ${S.data.font}`;ctx.fillText(S.data.name2,w/2,h/2+80);ctx.font=`16px ${S.data.font}`;ctx.fillStyle=S.data.palette.accent;ctx.fillText(S.data.date,w/2,h/2+150)}else if(S.type==='constellation'){ctx.fillStyle=S.data.textColor;const stars=[[50,30],[120,50],[200,40],[280,60],[150,90],[320,80],[100,120],[250,110],[180,140]];stars.forEach((st,i)=>{const sz=2+Math.random()*2;const grd=ctx.createRadialGradient(st[0],st[1],0,st[0],st[1],sz*3);grd.addColorStop(0,'rgba(255,255,255,1)');grd.addColorStop(0.5,S.data.textColor);grd.addColorStop(1,'rgba(255,255,255,0)');ctx.fillStyle=grd;ctx.beginPath();ctx.arc(st[0],st[1],sz,0,Math.PI*2);ctx.fill();if(i<stars.length-1){ctx.strokeStyle=S.data.palette.accent;ctx.lineWidth=1;ctx.beginPath();ctx.moveTo(st[0],st[1]);ctx.lineTo(stars[i+1][0],stars[i+1][1]);ctx.stroke()}});ctx.fillStyle=S.data.textColor;ctx.font=`32px ${S.data.font}`;ctx.fillText(S.data.title||'UNDER THIS SKY',w/2,h-200);ctx.font=`16px ${S.data.font}`;ctx.fillStyle=S.data.palette.accent;ctx.fillText(S.data.date,w/2,h-160)}else if(S.type==='milestone'){ctx.font=`bold 48px ${S.data.font}`;ctx.fillText(S.data.title||'MILESTONE',w/2,h/2-50);ctx.font=`24px ${S.data.font}`;ctx.fillStyle=S.data.palette.accent;ctx.fillText(S.data.subtitle||'Special Moment',w/2,h/2+30);ctx.font=`16px ${S.data.font}`;ctx.fillText(S.data.date,w/2,h/2+100)}else if(S.type==='quote'){const words=S.data.quote.split(' ');const lines=[];let cl='';ctx.font=`24px ${S.data.font}`;words.forEach(wd=>{const tl=cl+wd+' ';const m=ctx.measureText(tl);if(m.width>w-100&&cl!==''){lines.push(cl);cl=wd+' '}else{cl=tl}});lines.push(cl);const lh=36;const sy=h/2-(lines.length*lh)/2;lines.forEach((l,i)=>ctx.fillText(l.trim(),w/2,sy+i*lh))}}
renderPalettes();renderFonts();renderContentInputs();draw();
document.querySelectorAll('.tab').forEach(t=>t.onclick=()=>{document.querySelectorAll('.tab').forEach(x=>x.classList.remove('active'));t.classList.add('active');document.querySelectorAll('.tab-content').forEach(x=>x.classList.remove('active'));document.getElementById(t.dataset.tab+'-tab').classList.add('active')});
document.querySelectorAll('.poster-type-card').forEach(c=>c.onclick=()=>{document.querySelectorAll('.poster-type-card').forEach(x=>x.classList.remove('active'));c.classList.add('active');S.type=c.dataset.type;renderContentInputs();draw()});
document.querySelectorAll('.shape-btn').forEach(b=>b.onclick=()=>{document.querySelectorAll('.shape-btn').forEach(x=>x.classList.remove('active'));b.classList.add('active');S.shape=b.dataset.shape;draw()});
document.getElementById('textColorPicker').oninput=e=>{S.data.textColor=e.target.value;draw()};
document.getElementById('downloadPNG').onclick=()=>{const c=document.getElementById('posterCanvas');const l=document.createElement('a');l.download='openposter_'+Date.now()+'.png';l.href=c.toDataURL('image/png');l.click()};
</script>
